my {{+$filename+}} = '{{+/path/to/file.name+}}';

sub slurp_file {
    my ({{+$filename+}}) = @_;

    # Get a handle on the code...
	open my {{+$FILE+}}, '<', {{+$filename+}}
        or croak "Cannot open '{{+$filename+}}': $OS_ERROR";
	# Read it all in...
	my {{+$data+}} = do { local $/; <$in> };

	return {{+$data+}};
}
